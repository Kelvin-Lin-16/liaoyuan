<!DOCTYPE html>
<html ng-app="ShortenURLDemo">
  <head>
    <title>liaoyuan demo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="/stylesheets/style.css"/>
  </head>
  <body class="text-center">
  <header>
      <h1>Shorten URL Demo</h1>
  </header>
  <section>
    <div class="container" ng-controller="urlController">
      <div class="row">
        <div class="col-md-2">&nbsp;</div>
        <div class="col-md-8">
          <form class="form-inline" ng-submit="shorten()">
            <div class="form-group">
              <label for="originalURL">Original URL</label>
              <input type="url" class="form-control" ng-model="originalURL" placeholder="http://liaoyuan.io" required>
            </div>
            <button type="submit" class="btn btn-primary">Shorten URL</button>
            <div><a class="newURL" href="/{{newURL}}">{{newURL}}</a></div>
          </form>
        </div>
        <div class="col-md-2">&nbsp;</div>
      </div>
      <div class="row">
        <div class="col-md-2">&nbsp;</div>
        <div class="col-md-8">
          <table class="table table-striped" data-ng-init="load()">
            <tr>
              <td>Long URL</td>
              <td>Shortened URL</td>
              <td>Created</td>
            </tr>
            <tr ng-repeat="url in urls">
              <td>{{url.longURL}}</td>
              <td><a href="/{{url.shortURL}}">{{url.shortURL}}</a></td>
              <td>{{url.created.replace('/Date(','').replace(')/','') | date:"HH:mm MMMM dd" }}</td>
            </tr>
          </table>
        </div>
        <div class="col-md-2">&nbsp;</div>
      </div>
    </div>
  </section>
  <footer>

  </footer>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular.min.js"></script>
  <script src="javascripts/demo.js"></script>
  </body>
</html>
